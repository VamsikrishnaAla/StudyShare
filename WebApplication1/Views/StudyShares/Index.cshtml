@model IEnumerable<WebApplication1.Models.StudyShare>

@{
    ViewData["Title"] = "Index";
}

@* Adding Bootstrap for layout improvement *@
<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet" />

<div class="container my-5">

    <div class="row mb-4">
        <div class="col-12 text-center">
            <h1>Welcome to StudyShare</h1>
            <p class="lead">Here you can share your resources.</p>
        </div>
    </div>

    @* Displaying shared resources section *@
    @if (Model.Any())
    {
        <div class="row mb-4">
            <div class="col-12">
                <h2>Your Shared Resources</h2>
                <p class="text-muted">Below are the resources shared by you. </p>
            </div>
        </div>

        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="thead-dark">
                    <tr>
                        <th>@Html.DisplayNameFor(model => model.Title)</th>
                        <th>@Html.DisplayNameFor(model => model.Type)</th>
                        <th>@Html.DisplayNameFor(model => model.Subject)</th>
                        <th>@Html.DisplayNameFor(model => model.Description)</th>
                        <th>@Html.DisplayNameFor(model => model.Url)</th>
                        <th>@Html.DisplayNameFor(model => model.Tags)</th>
                        <th>@Html.DisplayNameFor(model => model.FilePath)</th>
                        <th>@Html.DisplayNameFor(model => model.CreatedAt)</th>
                        <th></th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(modelItem => item.Title)</td>
                            <td>@Html.DisplayFor(modelItem => item.Type)</td>
                            <td>@Html.DisplayFor(modelItem => item.Subject)</td>
                            <td>@Html.DisplayFor(modelItem => item.Description)</td>
                            <td>@Html.DisplayFor(modelItem => item.Url)</td>
                            <td>@Html.DisplayFor(modelItem => item.Tags)</td>
                            <td>@Html.DisplayFor(modelItem => item.FilePath)</td>
                            <td>@Html.DisplayFor(modelItem => item.CreatedAt)</td>
                            <td>
                                <a class="btn btn-primary btn-sm" asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                                <a class="btn btn-info btn-sm" asp-action="Details" asp-route-id="@item.Id">Details</a>
                                <a class="btn btn-danger btn-sm" asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="alert alert-info">
            No resources shared yet. Share your first resource!
        </div>
    }

    <div class="text-center my-4">
        <p>
            <a class="btn btn-success btn-lg" asp-action="Create">Share Your Resource</a>
        </p>
    </div>

</div>

@* Optionally, you can add a footer if desired *@
<footer class="text-center mt-5">
    <p>StudyShare © 2024</p>
</footer>

<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"></script>
